<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BabyTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- Optional: set to transparent if your app is drawing behind the status bar. -->


        <!-- Optional: set the status bar light and content dark. -->


    </style>

    <style name="Theme.BabyTracker" parent="Base.Theme.BabyTracker">

        <item name="android:statusBarColor">
            @android:color/transparent
        </item>

        <!-- Optional: set the status bar light and content dark. -->
        <item name="android:windowLightStatusBar">
            true
        </item>


    </style>


    <!-- styles.xml -->
    <style name="title_onboarding">
        <item name="android:textSize">31sp</item>
        <item name="android:textColor">#010101</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="description_onboarding">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#010101</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="home">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="annual">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#010101</item>
    </style>

    <style name="home_titles">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="titles">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textColor">#4625C4</item>
    </style>

    <style name="get_premium">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FAFAFA</item>
    </style>

    <style name="settings_titles">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#010101</item>
    </style>

    <style name="input">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#010101</item>
    </style>

    <style name="save">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FAFAFA</item>
    </style>

    <style name="saved">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#FAFAFA</item>
    </style>

    <style name="symptoms_name">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#010101</item>
    </style>

    <style name="date_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#010101</item>
    </style>

    <style name="privacy">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#1E1F23</item>
    </style>

</resources>